<h1>Listing tracks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Track number</th>
    <th>Rating</th>
    <th>Img url</th>
    <th>Duration</th>
    <th>Location</th>
    <th>Album</th>
    <th>Genre</th>
    <th>Artist</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tracks.each do |track| %>
  <tr>
    <td><%= track.name %></td>
    <td><%= track.track_number %></td>
    <td><%= track.rating %></td>
    <td><%= track.img_url %></td>
    <td><%= track.duration %></td>
    <td><%= track.location %></td>
    <td><%= track.album_id %></td>
    <td><%= track.genre_id %></td>
    <td><%= track.artist_id %></td>
    <td><%= link_to 'Show', track %></td>
    <td><%= link_to 'Edit', edit_track_path(track) %></td>
    <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

    <div class="field">
              <%= form_tag search_tracks_path, :method => 'post' do %>
              <%= label_tag(:search, "Search for:") %>
              <%= text_field_tag :search %>
              <%= submit_tag "Search", :name => nil %>
        <% end %>
    </div>

<%= link_to 'New Track', new_track_path %>
